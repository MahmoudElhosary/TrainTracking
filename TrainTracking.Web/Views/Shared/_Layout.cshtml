@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using System.Globalization
@using TrainTracking.Domain.Enums
@inject TrainTracking.Application.Interfaces.IBookingRepository BookingRepo
@{
    var currentCulture = CultureInfo.CurrentUICulture.Name;
    var isRTL = currentCulture.StartsWith("ar");
    var dir = isRTL ? "rtl" : "ltr";
    int points = 0;
    if (User.Identity?.IsAuthenticated == true)
    {
        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        if (userId != null)
        {
            var bookings = await BookingRepo.GetBookingsByUserIdAsync(userId);
            points = (int)bookings.Where(b => b.Status == BookingStatus.Confirmed).Sum(b => b.Price * 10);
        }
    }
}
<!DOCTYPE html>
<html lang="@currentCulture" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KuwGo</title>
    @if (isRTL)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TrainTracking.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body { font-family: 'Cairo', sans-serif; background-color: #f8f9fa; }
        .navbar-custom { background-color: white; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05) !important; padding: 0.5rem 0; }
        .nav-link { 
            color: #555 !important; 
            font-weight: 600; 
            border-radius: 50px; 
            transition: all 0.3s ease;
            position: relative;
        }
        .nav-link:hover { 
            color: #005eb8 !important; 
            background-color: rgba(0, 94, 184, 0.08); 
            transform: translateY(-2px);
        }
        .footer { background-color: white; padding: 1.5rem 0; margin-top: 3rem; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 navbar-custom">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="static-logo-container">
                        <img src="~/images/logo.png" alt="KuwGo" class="static-logo">
                    </div>
                </a>

                <!-- Mobile Toggle button -->
                <div class="d-flex align-items-center d-lg-none">
                     <!-- Language Toggle Mobile -->
                    <form asp-controller="Culture" asp-action="SetLanguage" method="post" class="me-2">
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                        <button type="submit" name="culture" value="@(isRTL ? "en-US" : "ar-KW")" class="btn btn-sm btn-outline-secondary rounded-pill px-3 fw-bold">
                            @(isRTL ? "EN" : "عربي")
                        </button>
                    </form>
                    <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar" aria-controls="mobileSidebar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Desktop Desktop Navigation -->
                <div class="collapse navbar-collapse d-none d-lg-flex justify-content-between">
                    <ul class="navbar-nav @(isRTL ? "flex-grow-1" : "flex-grow-1 ms-4")">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Trips" asp-action="Index">@Localizer["Trips"]</a></li>
                        <li class="nav-item"><a class="nav-link text-success fw-bold" asp-controller="Trips" asp-action="Live"><i class="fas fa-satellite-dish me-1"></i> @Localizer["LiveTracking"]</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-primary fw-bold" asp-controller="Admin" asp-action="Index"><i class="fas fa-tools me-1"></i> @Localizer["Dashboard"]</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav align-items-center">
                         <!-- Language Switcher Desktop -->
                        <li class="nav-item @(isRTL ? "me-3" : "ms-3")">
                            <form asp-controller="Culture" asp-action="SetLanguage" method="post" class="m-0">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <div class="btn-group btn-group-sm rounded-pill overflow-hidden shadow-sm border">
                                    <button type="submit" name="culture" value="ar-KW" class="btn @(isRTL ? "btn-primary" : "btn-white text-dark") border-0 px-3 fw-bold">AR</button>
                                    <button type="submit" name="culture" value="en-US" class="btn @(!isRTL ? "btn-primary" : "btn-white text-dark") border-0 px-3 fw-bold">EN</button>
                                </div>
                            </form>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link position-relative highlight-link pe-3" asp-controller="Bookings" asp-action="MyBookings">
                                    <i class="fas fa-ticket-alt @(isRTL ? "me-1" : "ms-1")"></i> @Localizer["MyBookings"]
                                </a>
                            </li>

                            <li class="nav-item d-flex align-items-center @(isRTL ? "me-2" : "ms-2")">
                                <a asp-controller="Bookings" asp-action="Rewards" class="points-standalone-btn shadow-sm rounded-circle d-flex align-items-center justify-content-center text-decoration-none" style="width: 42px; height: 42px;" title="@Localizer["MyPoints"]: @points">
                                    <div class="coin-glow m-0">
                                        <i class="fas fa-dollar-sign text-warning"></i>
                                    </div>
                                </a>
                            </li>

                            <li class="nav-item d-flex align-items-center @(isRTL ? "ms-3" : "me-3")">
                                <div class="user-capsule d-flex align-items-center p-1 rounded-pill shadow-sm">
                                    <div class="d-flex align-items-center px-2">
                                        <div class="user-avatar-sm" title="@User.Identity?.Name">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    </div>
                                    <div class="vr h-50 my-auto bg-secondary opacity-25 mx-0"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex align-items-center m-0">
                                        <button type="submit" onclick="sessionStorage.removeItem('locationChecked')" class="btn btn-sm btn-icon-only text-danger-soft rounded-circle" title="@Localizer["Logout"]">
                                            <i class="fas fa-power-off"></i>
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link bg-primary text-white px-4 rounded-pill shadow-sm" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a></li>
                        }
                        
                        <li class="nav-item @(isRTL ? "ms-2" : "me-2")">
                           <button id="themeToggle" class="btn btn-link nav-link theme-toggle-btn" title="@Localizer["ToggleTheme"]">
                                <i class="fas fa-moon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Premium Mobile Sidebar (Offcanvas) -->
        <div class="offcanvas offcanvas-@(isRTL ? "start" : "end") border-0 sidebar-offcanvas d-lg-none" tabindex="-1" id="mobileSidebar" aria-labelledby="mobileSidebarLabel">
            <div class="offcanvas-header border-bottom py-4">
                <div class="d-flex align-items-center">
                    <div class="static-logo-container">
                        <img src="~/images/logo.png" alt="KuwGo" class="static-logo" style="height: 40px;">
                    </div>
                </div>
                <button type="button" class="btn-close text-reset shadow-none" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body p-0">
                <!-- User Profile Section Mobile -->
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="sidebar-user-profile p-4 border-bottom bg-light bg-opacity-10">
                        <div class="d-flex align-items-center mb-3">
                            <div class="user-avatar-lg @(isRTL ? "me-3" : "ms-3")">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">@User.Identity?.Name</h6>
                                <span class="text-muted small">@points @Localizer["Points"]</span>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col-6">
                                <a asp-controller="Bookings" asp-action="Rewards" class="btn btn-outline-warning w-100 btn-sm rounded-pill">
                                    <i class="fas fa-coins @(isRTL ? "me-1" : "ms-1")"></i> @Localizer["Points"]
                                </a>
                            </div>
                            <div class="col-6">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger w-100 btn-sm rounded-pill">
                                        <i class="fas fa-sign-out-alt @(isRTL ? "me-1" : "ms-1")"></i> @Localizer["Logout"]
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="p-4 border-bottom bg-light bg-opacity-10">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100 rounded-pill shadow-sm">
                            <i class="fas fa-sign-in-alt @(isRTL ? "me-1" : "ms-1")"></i> @Localizer["MemberLogin"]
                        </a>
                    </div>
                }

                <!-- Navigation List -->
                <div class="list-group list-group-flush py-2 text-@(isRTL ? "start" : "start")">
                    <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <div class="sidebar-icon-box @(isRTL ? "me-3" : "ms-3") text-primary"><i class="fas fa-home"></i></div>
                        @Localizer["Home"]
                    </a>
                    <a asp-controller="Trips" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <div class="sidebar-icon-box @(isRTL ? "me-3" : "ms-3") text-info"><i class="fas fa-train"></i></div>
                        @Localizer["Trips"]
                    </a>
                    <a asp-controller="Trips" asp-action="Live" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center text-success fw-bold">
                        <div class="sidebar-icon-box @(isRTL ? "me-3" : "ms-3") text-success"><i class="fas fa-map-marker-alt"></i></div>
                        @Localizer["LiveTracking"]
                    </a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Bookings" asp-action="MyBookings" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                            <div class="sidebar-icon-box @(isRTL ? "me-3" : "ms-3") text-warning"><i class="fas fa-ticket-alt"></i></div>
                            @Localizer["MyBookings"]
                        </a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="dropdown-divider mx-4 my-2"></div>
                        <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center text-primary fw-bold">
                            <div class="sidebar-icon-box @(isRTL ? "me-3" : "ms-3") text-primary"><i class="fas fa-tools"></i></div>
                            @Localizer["Dashboard"]
                        </a>
                    }
                </div>

                <!-- Footer Section (Theme Toggle) -->
                <div class="mt-auto p-4 border-top">
                    <div class="d-flex justify-content-between align-items-center bg-light p-2 rounded-pill">
                        <span class="ms-3 small fw-bold">@Localizer["Appearance"]</span>
                        <button id="themeToggleMobile" class="btn theme-toggle-btn rounded-circle" style="width: 35px; height: 35px;">
                            <i class="fas fa-moon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <script>
        // Check for saved theme preference or use system preference
        const currentTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', currentTheme);

        document.addEventListener("DOMContentLoaded", function() {
            const toggleDesktop = document.getElementById('themeToggle');
            const toggleMobile = document.getElementById('themeToggleMobile');
            
            function updateThemeIcons(theme) {
                [toggleDesktop, toggleMobile].forEach(btn => {
                    if (!btn) return;
                    const icon = btn.querySelector('i');
                    if (theme === 'dark') {
                        icon.classList.remove('fa-moon');
                        icon.classList.add('fa-sun');
                        icon.style.color = '#ffc107'; // Sun yellow
                    } else {
                        icon.classList.remove('fa-sun');
                        icon.classList.add('fa-moon');
                        icon.style.color = ''; // Reset color
                    }
                });
            }

            // Initial icon setup
            updateThemeIcons(currentTheme);

            function toggleTheme() {
                let theme = document.documentElement.getAttribute('data-theme');
                let newTheme = theme === 'light' ? 'dark' : 'light';
                
                document.documentElement.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateThemeIcons(newTheme);
            }

            if (toggleDesktop) toggleDesktop.addEventListener('click', toggleTheme);
            if (toggleMobile) toggleMobile.addEventListener('click', toggleTheme);

            // Auto-close sidebar on link click (for mobile)
            const offcanvasElement = document.getElementById('mobileSidebar');
            if (offcanvasElement) {
                const offcanvas = new bootstrap.Offcanvas(offcanvasElement);
                document.querySelectorAll('.sidebar-offcanvas .list-group-item').forEach(link => {
                    link.addEventListener('click', () => {
                        const bsOffcanvas = bootstrap.Offcanvas.getInstance(offcanvasElement);
                        if (bsOffcanvas) bsOffcanvas.hide();
                    });
                });
            }
        });
    </script>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted border-top">
        <div class="container text-center">
            &copy; 2025 - KuwGo - <a asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
            <span class="mx-2 opacity-50">|</span>
            <span class="small fw-semibold text-primary-go pt-1">@Localizer["PoweredBy"] <span class="badge border border-primary text-primary px-2 py-1 ms-1" style="font-size: 0.65rem;">MH</span></span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Toast Container for Notifications -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="stationToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-primary text-white">
                <i class="fas fa-map-marker-alt me-2"></i>
                <strong class="me-auto">@Localizer["NearestStation"]</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body bg-white">
                <p class="mb-2">@Localizer["YouAreNear"] <strong id="nearestStationName" class="text-primary"></strong> (<span id="stationDistance"></span> @Localizer["Km"]).</p>
                <div class="mt-2 pt-2 border-top">
                    <a id="bookFromStationBtn" class="btn btn-sm btn-success w-100 fw-bold">
                        <i class="fas fa-ticket-alt me-1"></i> @Localizer["BookFromHere"]
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Check if we already asked (optional: use localStorage to avoid spamming)
            if (sessionStorage.getItem("locationChecked")) return;

            if ("geolocation" in navigator) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    var lat = position.coords.latitude;
                    var lng = position.coords.longitude;

                    // Send to server
                    fetch(`/Stations/GetNearest?lat=${lat}&lng=${lng}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                document.getElementById("nearestStationName").innerText = data.stationName;
                                document.getElementById("stationDistance").innerText = data.distance;
                                document.getElementById("bookFromStationBtn").href = `/Trips?searchStation=${data.stationName}`; // Assuming Trips index supports search
                                
                                var toastEl = document.getElementById('stationToast');
                                var toast = new bootstrap.Toast(toastEl, { delay: 10000 });
                                toast.show();
                                
                                sessionStorage.setItem("locationChecked", "true");
                            }
                        })
                        .catch(err => console.error("Error finding nearest station:", err));

                }, function(error) {
                    console.log("Location access denied or error:", error.message);
                });
            }
        });
    </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
